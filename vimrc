set number
set ruler
set showcmd
set magic
set background=dark
set showmatch
set lazyredraw
set tabstop=4
set softtabstop=2
set cindent shiftwidth=2
set autoindent shiftwidth=2
set smartindent shiftwidth=2
set expandtab
set completeopt=longest,menu
set nobackup
set autochdir
set nowrapscan
set hlsearch
set incsearch
set cmdheight=2
set laststatus=2
set history=32
set encoding=utf-8 fileencodings=ucs-bom,utf-8,cp936
let loaded_matchparen=1
nnoremap <C-Return> :bnext<CR>
nnoremap <C-S-Return> :bprev<CR>
nnoremap <C-Tab> :tabnext<CR>
nnoremap <C-S-Tab> :tabprev<CR>
nnoremap <C-h> <C-w>h
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-l> <C-w>l
nmap U <C-r>
